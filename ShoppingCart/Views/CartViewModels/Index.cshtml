@model IEnumerable<ShoppingCart.Models.ViewModels.CartViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationIsDhaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationOutsideDhaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationIsDhaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationOutsideDhaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCompleted)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit Order</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
